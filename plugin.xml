        <source-file src="src/android/plugin/google/maps/PluginAsyncInterface.java" target-dir="src/plugin/google/maps" />

        <!-- Cabify Stuff-->
        <source-file src="src/android/plugin/google/maps/CameraPositionParser.java" target-dir="src/plugin/google/maps" />
        <source-file src="src/android/plugin/google/maps/FakedR.java" target-dir="src/plugin/google/maps" />
